<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/primary"
            android:theme="@style/ThemeOverlay.MyApp.ActionBar"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/toolbar_style">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ask_tit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="sans-serif"
                    android:text="Book a Consultation"
                    android:textColor="@color/mds_bluegrey_700"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="100dp"
                    android:background="@color/mds_bluegrey_700"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvtit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="sans-serif"
                    android:text="Consult online doctors for your health queries on phone or video call"
                    android:textColor="@color/mds_bluegrey_700"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/grey_400" />




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/titlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appBarLayout"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/grey_300"
                            android:fontFamily="sans-serif"
                            android:padding="5dp"
                            android:text="Consult for (select a person)"
                            android:textColor="@color/mds_bluegrey_700"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:id="@+id/someone_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <HorizontalScrollView
                                    android:id="@+id/someone_scrollview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scrollbarStyle="outsideOverlay"
                                    android:scrollbars="horizontal">

                                    <LinearLayout
                                        android:id="@+id/parent_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                    </LinearLayout>
                                </HorizontalScrollView>


                                <ImageView
                                    android:id="@+id/profile_right_arrow"
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right|center_vertical"
                                    android:background="@color/grey_10"
                                    android:src="@mipmap/right"
                                    android:visibility="gone" />

                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/famidets_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/grey_300"
                                android:padding="2dp">

                                <TextView
                                    android:id="@+id/basic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="sans-serif"
                                    android:padding="5dp"
                                    android:text="Basic Information"
                                    android:textColor="@color/mds_bluegrey_700"
                                    android:textSize="15dp" />

                                <ImageView
                                    android:id="@+id/img_edit_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toRightOf="@+id/basic"
                                    android:padding="2dp"
                                    android:src="@mipmap/edit_icon"
                                    android:tint="@color/grey_600"
                                    android:visibility="visible" />

                                <ImageView
                                    android:id="@+id/img_downarrow"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dp"
                                    android:src="@mipmap/down_icon"
                                    android:tint="@color/grey_600"
                                    android:visibility="visible" />

                                <ImageView
                                    android:id="@+id/img_uparrow"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dp"
                                    android:src="@mipmap/up_icon"
                                    android:tint="@color/grey_600"
                                    android:visibility="gone" />

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/family_inner_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp"
                                android:visibility="visible">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="right|top"
                                        android:src="@mipmap/pedia_icon"
                                        android:visibility="gone" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/tv_fam_name"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentLeft="true"
                                                android:fontFamily="sans-serif"
                                                android:gravity="left"
                                                android:text="--"
                                                android:textColor="@color/mds_bluegrey_700"
                                                android:textSize="17dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                            <TextView
                                                android:id="@+id/tv_fam_agedets"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentRight="true"
                                                android:fontFamily="sans-serif"
                                                android:gravity="left"
                                                android:text="--"
                                                android:textColor="@color/grey_700"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp">

                                            <TextView
                                                android:id="@+id/tv_fam_height"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentLeft="true"
                                                android:fontFamily="sans-serif"
                                                android:gravity="left"
                                                android:text="--"
                                                android:textColor="@color/grey_700"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                            <TextView
                                                android:id="@+id/tv_fam_weight"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentRight="true"
                                                android:fontFamily="sans-serif"
                                                android:gravity="left"
                                                android:text="--"
                                                android:textColor="@color/grey_700"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                        </RelativeLayout>

                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>




                <TextView
                    android:id="@+id/tv_cons_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="sans-serif"
                    android:text="Consultation Mode :"
                    android:textColor="@color/mds_bluegrey_700"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_border"
                    android:elevation="3dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioGroup
                        android:id="@+id/group1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rad_phone_cons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/app_color"
                            android:checked="true"
                            android:text="Phone Consultation" />

                        <RadioButton
                            android:id="@+id/rad_video_cons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/app_color"
                            android:text="Video Consultation" />

                    </RadioGroup>

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif"
                            android:text="Select Consultation"
                            android:textColor="@color/grey_900"
                            android:textSize="15sp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/phonecons_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical">

                                <RadioButton
                                    android:id="@+id/check_phone"
                                    android:layout_width="70dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:button="@drawable/phone_radio_select"
                                    android:checked="true"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:text="Phone Consultation"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/vidoecons_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <RadioButton
                                    android:id="@+id/check_video"
                                    android:layout_width="70dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:button="@drawable/video_radio_select"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:text="Video Consultation"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_300"
                        android:fontFamily="sans-serif"
                        android:padding="5dp"
                        android:text="Describe your health issue here"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/grey_600"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/edt_issue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/cons_query_text"
                        android:fontFamily="sans-serif"
                        android:gravity="left"
                        android:hint="Enter your health issue with symtoms, current medications, age, gender, weight &amp; height"
                        android:minHeight="120dp"
                        android:padding="10dp"
                        android:textColor="@color/mds_bluegrey_800"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="visible">

                        <requestFocus />
                    </EditText>

                    <Spinner
                        android:id="@+id/spinner_speciality"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/select_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/blue_border_button"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_spec_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="13dp"
                                android:fontFamily="sans-serif"
                                android:text="Select Speciality (optional)"
                                android:textColor="@color/mds_bluegrey_900"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <ImageView
                                android:id="@+id/img_remove"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/remove_icon"
                                android:visibility="visible" />

                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:padding="5dp"
                            android:text="Preferences"
                            android:textAllCaps="false"
                            android:textColor="@color/app_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/mds_bluegrey_500" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_selectlang"
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="3"
                                android:fontFamily="sans-serif"
                                android:gravity="center_vertical"
                                android:text="Select Language:"
                                android:textColor="@color/mds_bluegrey_900"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spinner_lang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="4"
                                android:gravity="center_vertical"
                                android:padding="0dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:padding="5dp"
                                android:text="Enter your callback Number"
                                android:textAllCaps="false"
                                android:textColor="@color/app_color"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                android:visibility="gone" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/ccode_layout"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/blue_border_button"
                                    android:padding="5dp"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/tv_ccode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="sans-serif-light"
                                        android:text="+91"
                                        android:textAllCaps="false"
                                        android:textColor="@color/app_color"
                                        android:textSize="18dp"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_toRightOf="@+id/tv_ccode"
                                        android:src="@mipmap/down_arrow"
                                        android:tint="@color/black" />

                                </RelativeLayout>


                                <Spinner
                                    android:id="@+id/spinner_ccode"
                                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="2"
                                    android:gravity="bottom"
                                    android:visibility="gone" />

                                <com.hbb20.CountryCodePicker
                                    android:id="@+id/ccp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    app:ccp_countryAutoDetectionPref="SIM_NETWORK_LOCALE"
                                    app:ccp_countryPreference="us"
                                    app:ccp_hintExampleNumber="true" />


                                <EditText
                                    android:id="@+id/edt_phoneno"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="phone number"
                                    android:inputType="phone"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/button_rounded"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="Submit &amp; Continue"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="90dp"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:padding="16dp"
        android:text="Tap"
        android:visibility="gone" />

</LinearLayout>