<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/toolbar_bg"
        android:theme="@style/ThemeOverlay.MyApp.ActionBar"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextAppearance="@style/toolbar_style">

        <TextView
            android:id="@+id/tv_tooltit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Ask a doctor online"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tit_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ask_query_tit"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/titlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appBarLayout"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_300"
                        android:fontFamily="sans-serif"
                        android:padding="5dp"
                        android:text="Consult for (select a person)"
                        android:textColor="@color/mds_bluegrey_700"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:id="@+id/someone_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <HorizontalScrollView
                                android:id="@+id/someone_scrollview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbarStyle="outsideOverlay"
                                android:scrollbars="horizontal">

                                <LinearLayout
                                    android:id="@+id/parent_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                </LinearLayout>
                            </HorizontalScrollView>


                            <ImageView
                                android:id="@+id/profile_right_arrow"
                                android:layout_width="25dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right|center_vertical"
                                android:background="@color/grey_10"
                                android:src="@mipmap/right"
                                android:visibility="gone" />

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/famidets_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/grey_300"
                            android:padding="2dp">

                            <TextView
                                android:id="@+id/basic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="sans-serif"
                                android:padding="5dp"
                                android:text="Basic Information"
                                android:textColor="@color/mds_bluegrey_700"
                                android:textSize="15dp" />

                            <ImageView
                                android:id="@+id/img_edit_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/basic"
                                android:padding="2dp"
                                android:src="@mipmap/edit_icon"
                                android:tint="@color/grey_600"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/img_downarrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/down_icon"
                                android:tint="@color/grey_600"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/img_uparrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/up_icon"
                                android:tint="@color/grey_600"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/family_inner_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="visible">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="right|top"
                                    android:src="@mipmap/pedia_icon"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/tv_fam_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:fontFamily="sans-serif"
                                            android:gravity="left"
                                            android:text="--"
                                            android:textColor="@color/mds_bluegrey_700"
                                            android:textSize="17dp"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                        <TextView
                                            android:id="@+id/tv_fam_agedets"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:fontFamily="sans-serif"
                                            android:gravity="left"
                                            android:text="--"
                                            android:textColor="@color/grey_700"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp">

                                        <TextView
                                            android:id="@+id/tv_fam_height"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:fontFamily="sans-serif"
                                            android:gravity="left"
                                            android:text="--"
                                            android:textColor="@color/grey_700"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                        <TextView
                                            android:id="@+id/tv_fam_weight"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:fontFamily="sans-serif"
                                            android:gravity="left"
                                            android:text="--"
                                            android:textColor="@color/grey_700"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                    </RelativeLayout>

                                </LinearLayout>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/tvprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="sans-serif-thin"
                        android:gravity="left"
                        android:text="Enter your health query *"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/text_rounded_"
                        android:fontFamily="sans-serif-light"
                        android:gravity="left"
                        android:padding="8dp"
                        android:text="Rs.99"
                        android:textColor="@color/grey_900"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_ask_tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:elevation="0dp"
                android:fontFamily="sans-serif"
                android:text="Ask a doctor online"
                android:textColor="@color/mds_bluegrey_700"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="gone"
                custom:typefaceAsset="fonts/NotoSans-Bold.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="100dp"
                android:background="@color/mds_bluegrey_700"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvtit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:fontFamily="sans-serif"
                android:text="Get quick medical advice for your health queries"
                android:textColor="@color/mds_bluegrey_700"
                android:textSize="13dp"
                android:textStyle="normal"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/grey_300"
                android:padding="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Enter your query"
                    android:textColor="@color/mds_bluegrey_700"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/down_arrow_white"
                    android:tint="@color/grey_600"
                    android:visibility="gone" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvfquery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_border_button"
                android:fontFamily="sans-serif"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Your first query is FREE"
                android:textColor="@color/red_900"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edt_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:isScrollContainer="true"
                android:minHeight="10dp"
                android:padding="10dp"
                android:textColor="@color/mds_bluegrey_700"
                android:textSize="15sp"
                android:textStyle="normal" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Choose a Speciality"
                android:textColor="@color/grey_900"
                android:textSize="15dp"
                android:textStyle="normal"
                android:visibility="gone" />

            <!--  <Spinner
                  android:id="@+id/spinner_speciality"
                  style="@style/spinner_style"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:layout_marginTop="15dp"
                  android:visibility="gone" />-->

            <LinearLayout
                android:id="@+id/select_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_border_blue_news"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_spec_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="13dp"
                        android:fontFamily="sans-serif"
                        android:text="Select Speciality (optional)"
                        android:textColor="@color/mds_bluegrey_700"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/remove_icon"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="100dp"
                android:background="@color/mds_bluegrey_200"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_rounded"
                    android:elevation="0dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Submit &amp; Continue"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fee_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="5dp"
                    android:visibility="gone"
                    card_view:cardCornerRadius="5dp"
                    card_view:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/icq100_layout"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/answeredittext2"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tv_fee1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:text="Rs.399"
                                android:textColor="@color/mds_bluegrey_600"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_fee2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="for"
                                android:textColor="@color/mds_bluegrey_800"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tv_fee3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:text="100 Hours"
                                android:textColor="@color/app_color"
                                android:textSize="22sp" />

                            <Button
                                android:id="@+id/btn_icq100"
                                android:layout_width="wrap_content"
                                android:layout_height="37dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/button_rounded_new"
                                android:elevation="10dp"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="Start Chat"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/buttons_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/btn_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/button_rounded_new"
                            android:elevation="10dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Submit Query"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvqfee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:fontFamily="sans-serif"
                                android:text="(Rs.299)"
                                android:textColor="@color/mds_bluegrey_600"
                                android:textSize="17sp" />

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <View
                                android:id="@+id/line1"
                                android:layout_width="0.8dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:background="@color/mds_bluegrey_600" />

                            <TextView
                                android:id="@+id/tv_or"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/line1"
                                android:fontFamily="sans-serif-light"
                                android:text="Or"
                                android:textColor="@color/mds_bluegrey_600"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/line2"
                                android:layout_width="0.8dp"
                                android:layout_height="50dp"
                                android:layout_below="@+id/tv_or"
                                android:layout_centerHorizontal="true"
                                android:background="@color/mds_bluegrey_600" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="13dp"
                        android:elevation="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/btn_icq50"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/button_rounded_new"
                            android:elevation="10dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:text="Start Chat"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_fee11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:fontFamily="sans-serif"
                                android:text="(Rs.299)"
                                android:textColor="@color/mds_bluegrey_600"
                                android:textSize="17sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_for50hrs"
