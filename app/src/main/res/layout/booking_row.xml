<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_poster"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_margin="7dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvquery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:text="Notes : startActivity . After that you can finish your current activity from where you redirect. When the user clicks new, do FirstActivity.fa.finish(); and call the new Intent."
                android:textColor="@color/mds_bluegrey_800"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="7dp"
                android:background="@color/mds_bluegrey_200"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date_lab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:text="Date: "
                    android:textColor="@color/grey_900"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvcdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:text="25.May.2016"
                    android:textColor="@color/blue_700"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:text="Time Range: "
                    android:textColor="@color/grey_900"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvctime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:text="12:00am to 12:00am"
                    android:textColor="@color/purple_900"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_status_lab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:text="Status: "
                    android:textColor="@color/grey_900"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:text="On: 25.May.2016"
                    android:textColor="@color/red_700"
                    android:textSize="14sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-thin"
                android:maxLines="2"
                android:text="Paediatric Dentistry, Dentistry, Periodontist, Endodontist"
                android:textColor="@color/red_800"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="22dip"
        android:layout_height="22dip"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/right"
        android:visibility="gone" />

</RelativeLayout>