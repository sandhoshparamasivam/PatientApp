<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="3dp"
                android:paddingRight="0dp">

                <TextView
                    android:id="@+id/lable_bullet"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@color/mds_red_800"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_consulted_for"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="sans-serif-light"
                            android:text="For Prashanth (friend)"
                            android:textColor="@color/grey_900"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif"
                            android:text="15.Mar.2016 11:03am"
                            android:textColor="@color/mds_bluegrey_600"
                            android:textSize="11sp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvquery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="3"
                        android:text="For breathing problem in flight, how much O2 should I use?For breathing problem in flight, how much O2 should I use?For breathing problem in flight, how much O2 should I use?"
                        android:textColor="@color/mds_bluegrey_900"
                        android:textSize="14sp" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/share_icon_grey"
                            android:visibility="gone" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_qid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:fontFamily="sans-serif-light"
                                android:text="Payment not done."
                                android:textColor="@color/red_900"
                                android:textSize="13sp"
                                android:textStyle="bold|italic"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_hlstatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:fontFamily="sans-serif-light"
                                android:text="Payment not done."
                                android:textColor="@color/red_900"
                                android:textSize="13sp"
                                android:textStyle="bold|italic"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_docurl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/btn_qview"
                                android:layout_width="70dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/button_rounded_green"
                                android:fontFamily="sans-serif"
                                android:onClick="btnRemoveClick"
                                android:text="View"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/btn_qedit"
                                android:layout_width="70dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/button_rounded_green"
                                android:fontFamily="sans-serif"
                                android:text="Edit"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="14sp" />


                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|bottom"
                        android:layout_marginTop="5dp"
                        android:gravity="right|bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/calender"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvdate2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:gravity="right"
                            android:text="15.Mar.2016 11:03am"
                            android:textColor="@color/grey_600"
                            android:textSize="11sp"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/status_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    android:src="@mipmap/share_grey" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview_poster"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/status_icon"
                    android:src="@mipmap/babu"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_doctname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/status_layout"
                    android:layout_toRightOf="@+id/imageview_poster"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:text="sdfsdfdsfsdlkf sd kf;ldsf;lsdlfsd fsdlfsdfsdf ds sd fsd f sdf"
                    android:textColor="@color/mds_bluegrey_700"
                    android:textSize="12sp" />


                <LinearLayout
                    android:id="@+id/status_layout"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/answered_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_tick"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="7dp"
                            android:layout_toLeftOf="@+id/tvstatus_answered"
                            android:src="@mipmap/tick_mark"
                            android:tint="@color/green_900" />

                        <TextView
                            android:id="@+id/tvstatus_answered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif"
                            android:text="Answered"
                            android:textColor="@color/green_800"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/draft_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img_draft"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/tvstatus_draft"
                            android:src="@mipmap/draft_icon"
                            android:tint="@color/picker_button_background_selected" />

                        <TextView
                            android:id="@+id/tvstatus_draft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif"
                            android:text="Draft"
                            android:textColor="@color/picker_button_background_selected"
                            android:textSize="14sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/awaiting_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_wait"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/tvstatus_wait"
                            android:src="@mipmap/awaiting_icon"
                            android:tint="@color/dark_purple_400" />

                        <TextView
                            android:id="@+id/tvstatus_wait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif"
                            android:text="Awaiting for Answer"
                            android:textColor="@color/dark_purple_400"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_paynow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button_login_orange"
                        android:fontFamily="sans-serif-medium"
                        android:onClick="PayNowClick"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="Pay Now"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/fav_icon"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:src="@mipmap/fav_empty"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_qtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_ask"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="5dp"
                    android:text="This is chat"
                    android:textColor="@color/app_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="Pay Now"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />


            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>