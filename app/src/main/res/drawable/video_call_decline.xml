<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="90dp" />
            <stroke android:width="1dip" android:color="@color/app_color_green" />
            <gradient android:angle="-90" android:endColor="@color/grey_800" android:startColor="@color/grey_800" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="90dp" />
            <stroke android:width="0dip" android:color="@color/app_color_green" />
            <solid android:color="@color/grey_800" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="90dp" />
            <stroke android:width="0dip" android:color="@color/white" />
            <gradient android:angle="-90" android:endColor="@color/grey_500" android:startColor="@color/grey_500" />
        </shape>
    </item>
</selector>